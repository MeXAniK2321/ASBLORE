<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.css" />
		<include src="s2r://panorama/styles/custom_game/custom_chatwheel.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/custom_utils.vjs_c" />
		<include src="s2r://panorama/scripts/custom_game/custom_chatwheel.vjs_c" />
	</scripts>
	<snippets>
		<snippet name="Phrase">
			<Panel>
				<Panel class="Phrase">
					<Panel class="ChatWheelSoundIcon" />
					<Label text="{s:phrase}" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	<Panel hittest="false" class="MyWheel">
		<Panel id="Wheel">
			<Panel id="Arrow" class="Hidden" />
			<Panel id="PointerContainer">
				<Panel id="WheelPointer" />
			</Panel>
			<Panel id="WheelBG">
				<Panel id="WheelCenter">
					<Panel id="WheelBG2" />
				</Panel>
			</Panel>
		</Panel>
		<Panel id="Bubble">
			<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
		</Panel>
		<Panel hittest="false" id="PhrasesContainer" />
		<Label id="WHTooltip" text="#whtooltip" class="MyTooltip" />
	</Panel>
</root>
